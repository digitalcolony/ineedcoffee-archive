---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

// Page metadata
const title = "INeedCoffee Sections";
const description = "Browse all content sections on INeedCoffee";

const sections = [
	{ slug: "brewing-coffee", displayName: "Brewing Coffee" },
	{ slug: "cafe-culture", displayName: "Cafe Culture" },
	{ slug: "coffee-and-health", displayName: "Coffee and Health" },
	{ slug: "coffee-business", displayName: "Coffee Beans" },
	{ slug: "coffee-comics", displayName: "Coffee Comics" },
	{ slug: "coffee-history", displayName: "Coffee History" },
	{ slug: "coffee-people", displayName: "Coffee People" },
	{ slug: "espresso", displayName: "Espresso" },
	{ slug: "grinding-coffee", displayName: "Grinding Coffee" },
	{ slug: "coffee-recipes", displayName: "Recipes" },
	{ slug: "roasting-coffee", displayName: "Roasting Coffee" },
	{ slug: "tea", displayName: "Tea" },
].sort((a, b) => a.displayName.localeCompare(b.displayName));
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.section-list {
				display: flex;
				flex-direction: column;
				gap: 0;
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}

			h1 {
				text-align: center;
				margin-bottom: 2rem;
			}

			.section-list a {
				text-decoration: none;
				margin-bottom: 1.5rem;
				padding-bottom: 1.5rem;
				border-bottom: 1px solid rgba(var(--gray), 0.2);
			}

			.section-list a:last-child {
				border-bottom: none;
			}

			.section-name {
				font-size: 1.5rem;
				font-weight: 600;
				margin-bottom: 0.5rem;
				color: rgb(var(--black));
				line-height: 1.4;
			}

			a:hover .section-name {
				text-decoration: underline;
			}

			/* Dark mode styles */
			:global(.dark-mode) .section-name {
				color: #ffffff;
			}

			:global(.dark-mode) .section-list a {
				border-bottom-color: rgba(255, 255, 255, 0.1);
			}

			/* System preference dark mode */
			@media (prefers-color-scheme: dark) {
				:global(:not(.light-mode):not(.dark-mode)) .section-name {
					color: #ffffff;
				}

				:global(:not(.light-mode):not(.dark-mode)) .section-list a {
					border-bottom-color: rgba(255, 255, 255, 0.1);
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="section-list">
				<h1>INeedCoffee Sections</h1>
				{
					sections.map((section) => (
						<a href={`/section/${section.slug}/`} class="section-card">
							<div class="section-name">{section.displayName}</div>
						</a>
					))
				}
			</div>
		</main>
		<Footer />
	</body>
</html>
