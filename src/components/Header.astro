---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_TITLE_MOBILE } from "../consts";
---

<header>
	<nav>
		<h2>
			<a href="/" class="desktop-title">{SITE_TITLE}</a>
			<a href="/" class="mobile-title">{SITE_TITLE_MOBILE}</a>
		</h2>

		<div class="menu-toggle">
			<button id="hamburger-menu" aria-label="Toggle menu">
				<span class="bar"></span>
				<span class="bar"></span>
				<span class="bar"></span>
			</button>
		</div>

		<div class="internal-links" id="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/section">Sections</HeaderLink>
			<HeaderLink href="/by">Authors</HeaderLink>
		</div>

		<div class="theme-toggle">
			<button id="theme-toggle" aria-label="Toggle dark mode">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					id="moon-icon"
					class="theme-icon"
					viewBox="0 0 24 24"
					width="24"
					height="24"
				>
					<path
						class="moon-path"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
				</svg>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					id="sun-icon"
					class="theme-icon"
					viewBox="0 0 24 24"
					width="24"
					height="24"
				>
					<circle
						class="sun-path"
						cx="12"
						cy="12"
						r="5"
						fill="none"
						stroke="currentColor"
						stroke-width="2"></circle>
				</svg>
			</button>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: 0 2px 8px var(--header-shadow);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}

	.internal-links {
		display: flex;
		justify-content: center;
		margin-left: 2em;
		/* Responsive spacing between links */
		gap: clamp(0.5rem, 2vw, 1.25rem);
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--text-color);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: rgb(var(--accent));
	}

	.mobile-title {
		display: none;
	}

	.desktop-title {
		display: block;
	}

	/* Hamburger menu styles */
	.menu-toggle {
		display: none;
		cursor: pointer;
		padding: 10px;
		z-index: 100;
	}

	.bar {
		display: block;
		width: 25px;
		height: 3px;
		margin: 5px auto;
		background-color: var(--text-color);
		transition:
			transform 0.3s ease-in-out,
			opacity 0.3s ease-in-out,
			background-color 0.3s ease;
	}

	/* Dark mode styles for hamburger menu */
	:global(.dark-mode) .bar {
		background-color: #6d7bff; /* Use accent color for better visibility */
	}

	:global(.dark-mode) #hamburger-menu {
		background-color: rgba(0, 0, 0, 0.3); /* Subtle background in dark mode */
		border-radius: 5px;
	}

	/* System preference dark mode for hamburger */
	@media (prefers-color-scheme: dark) {
		:global(:not(.light-mode):not(.dark-mode)) .bar {
			background-color: #6d7bff; /* Use accent color for better visibility */
		}

		:global(:not(.light-mode):not(.dark-mode)) #hamburger-menu {
			background-color: rgba(0, 0, 0, 0.3); /* Subtle background in dark mode */
			border-radius: 5px;
		}
	}

	/* Theme toggle styles */
	.theme-toggle {
		display: flex;
		align-items: center;
		margin-left: 1em;
	}

	#theme-toggle {
		background: none;
		border: none;
		padding: 0.6em;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		transition: background-color 0.2s;
		position: relative;
		width: 40px;
		height: 40px;
		background-color: var(--button-bg);
		color: var(--text-color);
	}

	#theme-toggle:hover {
		background-color: var(--button-hover);
	}

	.theme-icon {
		stroke: currentColor;
		stroke-width: 2;
		fill: none;
		width: 24px;
		height: 24px;
		transition: opacity 0.2s ease;
	}

	#moon-icon {
		opacity: 0;
		position: absolute;
	}

	#sun-icon {
		opacity: 1;
		position: relative;
	}

	:global(.dark-mode) #moon-icon {
		opacity: 1;
		position: relative;
	}

	:global(.dark-mode) #sun-icon {
		opacity: 0;
		position: absolute;
	}

	@media (prefers-color-scheme: dark) {
		:global(:not(.light-mode):not(.dark-mode)) #moon-icon {
			opacity: 1;
			position: relative;
		}

		:global(:not(.light-mode):not(.dark-mode)) #sun-icon {
			opacity: 0;
			position: absolute;
		}
	}

	@media (max-width: 720px) {
		.theme-toggle {
			position: absolute;
			top: 0.7em;
			right: 1em;
			z-index: 10;
		}

		.menu-toggle {
			display: block;
			position: absolute;
			top: 0.7em;
			right: 4em;
		}

		#hamburger-menu {
			border: none;
			background: none;
			cursor: pointer;
			padding: 8px;
			border-radius: 5px;
		}

		.internal-links {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 0;
			background-color: var(--header-bg);
			flex-direction: column;
			align-items: center;
			justify-content: flex-start;
			overflow: hidden;
			transition: height 0.3s ease-in-out;
			margin-left: 0;
			z-index: 99;
			padding-top: 60px;
			opacity: 0;
			visibility: hidden;
			/* Vertical spacing between stacked links */
			gap: 0.75rem;
		}

		.internal-links.show {
			height: 100vh;
			opacity: 1;
			visibility: visible;
		}

		.internal-links a {
			/* Use gap for spacing; keep generous tap targets */
			margin: 0;
			padding: 0.75em 0;
			font-size: 1.2em;
		}

		.mobile-title {
			display: block;
		}

		.desktop-title {
			display: none;
		}

		/* Animate hamburger menu */
		.menu-toggle.active .bar:nth-child(1) {
			transform: translateY(8px) rotate(45deg);
		}

		.menu-toggle.active .bar:nth-child(2) {
			opacity: 0;
		}

		.menu-toggle.active .bar:nth-child(3) {
			transform: translateY(-8px) rotate(-45deg);
		}

		/* Enhanced active state in dark mode */
		:global(.dark-mode) .menu-toggle.active #hamburger-menu {
			background-color: rgba(0, 0, 0, 0.5);
		}

		@media (prefers-color-scheme: dark) {
			:global(:not(.light-mode):not(.dark-mode)) .menu-toggle.active #hamburger-menu {
				background-color: rgba(0, 0, 0, 0.5);
			}
		}
	}

	/* Wider screens: open up spacing slightly */
	@media (min-width: 1024px) {
		.internal-links {
			gap: clamp(0.75rem, 1.5vw, 1.5rem);
		}
	}
</style>

<script>
	// Add the existing theme script
	import "../scripts/theme.js";
	import "../scripts/mobile-menu.js";
</script>
