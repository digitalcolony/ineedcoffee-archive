---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/posts">Posts</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="theme-toggle">
			<button id="theme-toggle" aria-label="Toggle dark mode">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					id="moon-icon"
					class="theme-icon"
					viewBox="0 0 24 24"
					width="24"
					height="24"
				>
					<path
						class="moon-path"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
				</svg>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					id="sun-icon"
					class="theme-icon"
					viewBox="0 0 24 24"
					width="24"
					height="24"
				>
					<circle
						class="sun-path"
						cx="12"
						cy="12"
						r="5"
						fill="none"
						stroke="currentColor"
						stroke-width="2"></circle>
					<line
						class="sun-path"
						x1="12"
						y1="1"
						x2="12"
						y2="3"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="12"
						y1="21"
						x2="12"
						y2="23"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="4.22"
						y1="4.22"
						x2="5.64"
						y2="5.64"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="18.36"
						y1="18.36"
						x2="19.78"
						y2="19.78"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="1"
						y1="12"
						x2="3"
						y2="12"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="21"
						y1="12"
						x2="23"
						y2="12"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="4.22"
						y1="19.78"
						x2="5.64"
						y2="18.36"
						stroke="currentColor"
						stroke-width="2"></line>
					<line
						class="sun-path"
						x1="18.36"
						y1="5.64"
						x2="19.78"
						y2="4.22"
						stroke="currentColor"
						stroke-width="2"></line>
				</svg>
			</button>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #f8f9fa; /* Matching footer light background */
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	/* Theme toggle styles */
	.theme-toggle {
		display: flex;
		align-items: center;
		margin-left: 1em;
	}

	#theme-toggle {
		background: none;
		border: none;
		padding: 0.6em;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		transition: background-color 0.2s;
		position: relative;
		width: 40px;
		height: 40px;
		background-color: rgba(var(--gray), 0.1);
	}

	#theme-toggle:hover {
		background-color: rgba(var(--accent), 0.2);
	}

	.theme-icon {
		stroke: currentColor;
		stroke-width: 2;
		fill: none;
		width: 24px;
		height: 24px;
		transition: opacity 0.2s ease;
	}

	#moon-icon {
		opacity: 0;
		position: absolute;
		color: var(--black);
	}

	#sun-icon {
		opacity: 1;
		position: relative;
		color: var(--black);
	}

	:global(.dark-mode) #moon-icon {
		opacity: 1;
		position: relative;
		color: white;
	}

	:global(.dark-mode) #sun-icon {
		opacity: 0;
		position: absolute;
		color: white;
	}

	@media (prefers-color-scheme: dark) {
		:global(:not(.light-mode):not(.dark-mode)) #moon-icon {
			opacity: 1;
			position: relative;
			color: white;
		}

		:global(:not(.light-mode):not(.dark-mode)) #sun-icon {
			opacity: 0;
			position: absolute;
			color: white;
		}

		header {
			background: #161c28; /* Match footer dark background */
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
		}

		nav a {
			color: white;
		}
	}

	:global(.dark-mode) header {
		background: #161c28; /* Match footer dark background */
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	}

	:global(.dark-mode) nav a {
		color: white;
	}

	@media (max-width: 720px) {
		.theme-toggle {
			position: fixed;
			top: 0.7em;
			right: 1em;
			z-index: 10;
		}
	}
</style>

<script is:inline>
	// Theme toggle functionality - using is:inline to ensure it runs immediately
	document.addEventListener("DOMContentLoaded", initThemeToggle);

	// Also run immediately in case the DOMContentLoaded already fired
	initThemeToggle();

	function initThemeToggle() {
		const themeToggle = document.getElementById("theme-toggle");

		if (themeToggle && !themeToggle.hasAttribute("data-initialized")) {
			// Mark as initialized to avoid duplicate event listeners
			themeToggle.setAttribute("data-initialized", "true");

			themeToggle.addEventListener("click", () => {
				const isDark =
					document.documentElement.classList.contains("dark-mode") ||
					(!document.documentElement.classList.contains("light-mode") &&
						window.matchMedia("(prefers-color-scheme: dark)").matches);

				if (isDark) {
					document.documentElement.classList.remove("dark-mode");
					document.documentElement.classList.add("light-mode");
					localStorage.setItem("theme", "light");
				} else {
					document.documentElement.classList.remove("light-mode");
					document.documentElement.classList.add("dark-mode");
					localStorage.setItem("theme", "dark");
				}
			});

			// Debug log to verify script execution
			console.log("Theme toggle initialized");
		}
	}
</script>
