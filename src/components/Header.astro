---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/section">Sections</HeaderLink>
			<HeaderLink href="/by">Authors</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="theme-toggle">
			<button id="theme-toggle" aria-label="Toggle dark mode">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					id="moon-icon"
					class="theme-icon"
					viewBox="0 0 24 24"
					width="24"
					height="24"
				>
					<path
						class="moon-path"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
				</svg>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					id="sun-icon"
					class="theme-icon"
					viewBox="0 0 24 24"
					width="24"
					height="24"
				>
					<circle
						class="sun-path"
						cx="12"
						cy="12"
						r="5"
						fill="none"
						stroke="currentColor"
						stroke-width="2"></circle>
				</svg>
			</button>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: 0 2px 8px var(--header-shadow);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--text-color);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: rgb(var(--accent));
	}

	/* Theme toggle styles */
	.theme-toggle {
		display: flex;
		align-items: center;
		margin-left: 1em;
	}

	#theme-toggle {
		background: none;
		border: none;
		padding: 0.6em;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		transition: background-color 0.2s;
		position: relative;
		width: 40px;
		height: 40px;
		background-color: var(--button-bg);
		color: var(--text-color);
	}

	#theme-toggle:hover {
		background-color: var(--button-hover);
	}

	.theme-icon {
		stroke: currentColor;
		stroke-width: 2;
		fill: none;
		width: 24px;
		height: 24px;
		transition: opacity 0.2s ease;
	}

	#moon-icon {
		opacity: 0;
		position: absolute;
	}

	#sun-icon {
		opacity: 1;
		position: relative;
	}

	:global(.dark-mode) #moon-icon {
		opacity: 1;
		position: relative;
	}

	:global(.dark-mode) #sun-icon {
		opacity: 0;
		position: absolute;
	}

	@media (prefers-color-scheme: dark) {
		:global(:not(.light-mode):not(.dark-mode)) #moon-icon {
			opacity: 1;
			position: relative;
		}

		:global(:not(.light-mode):not(.dark-mode)) #sun-icon {
			opacity: 0;
			position: absolute;
		}
	}

	@media (max-width: 720px) {
		.theme-toggle {
			position: fixed;
			top: 0.7em;
			right: 1em;
			z-index: 10;
		}
	}
</style>

<script src="../scripts/theme.js"></script>
