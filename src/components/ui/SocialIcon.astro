<a href={href} target="_blank" title={title} class="social-icon">
	<svg
		xmlns="http://www.w3.org/2000/svg"
		width="24"
		height="24"
		viewBox="0 0 24 24"
		fill="currentColor"
	>
		<path d={icons[network]}></path>
	</svg>
</a>

<style>
	.social-icon {
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: var(--button-bg);
		color: var(--text-color);
		transition: background-color 0.2s ease;
		margin-top: 1rem;
	}

	.social-icon:hover {
		background: var(--button-hover);
	}
</style>
