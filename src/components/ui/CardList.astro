---
export interface Item {
	slug: string;
	displayName: string;
}

export interface Props {
	items: Item[];
	title: string;
	basePath: string;
}

const { items, title, basePath } = Astro.props;
---

<div class="card-list">
	<h1>{title}</h1>

	{
		items.length > 0 ? (
			items.map((item) => (
				<a href={`/${basePath}/${item.slug}/`} class="card">
					<div class="card-name">{item.displayName}</div>
				</a>
			))
		) : (
			<p>No items found.</p>
		)
	}
</div>

<style>
	.card-list {
		display: flex;
		flex-direction: column;
		gap: 0;
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	h1 {
		text-align: center;
		margin-bottom: 2rem;
	}

	.card-list a {
		text-decoration: none;
		margin-bottom: 1.5rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid var(--border-color);
	}

	.card-list a:last-child {
		border-bottom: none;
	}

	.card-name {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--text-color);
		line-height: 1.4;
	}

	a:hover .card-name {
		text-decoration: underline;
	}
</style>
