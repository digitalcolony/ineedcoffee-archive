---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

export interface Props {
	title: string;
	description: string;
	categorySlug: string;
	posts: any[];
}

const { title, description, posts, categorySlug } = Astro.props;

// Filter posts by category if categorySlug is provided
const sortedPosts = categorySlug
	? posts
			.filter((post) => post.data.categorySlug === categorySlug)
			.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf())
	: posts.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf());
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 1em;
			}
			.section-header {
				margin-bottom: 2em;
				text-align: center;
			}
			ul {
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			li {
				margin-bottom: 1.5rem;
				padding-bottom: 1.5rem;
				border-bottom: 1px solid rgba(var(--gray), 0.2);
			}
			li:last-child {
				border-bottom: none;
			}
			.post-item {
				display: block;
				text-decoration: none;
			}
			.post-item:hover .title {
				text-decoration: underline;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.4;
				font-size: 1.5rem;
			}
			.date {
				margin: 0.25rem 0 0.5rem;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			.description {
				margin: 0.5rem 0 0;
				line-height: 1.5;
			}

			/* Dark mode styles for titles and dates */
			:global(.dark-mode) .title {
				color: #ffffff;
			}
			:global(.dark-mode) .date {
				color: #b0b6c6;
			}
			:global(.dark-mode) .description {
				color: rgba(255, 255, 255, 0.9);
			}
			:global(.dark-mode) li {
				border-bottom-color: rgba(255, 255, 255, 0.1);
			}
			:global(.dark-mode) .section-header h1 {
				color: #ffffff;
			}
			:global(.dark-mode) .section-header p {
				color: #b0b6c6;
			}

			/* System preference dark mode */
			@media (prefers-color-scheme: dark) {
				:global(:not(.light-mode):not(.dark-mode)) .title {
					color: #ffffff;
				}
				:global(:not(.light-mode):not(.dark-mode)) .date {
					color: #b0b6c6;
				}
				:global(:not(.light-mode):not(.dark-mode)) .description {
					color: rgba(255, 255, 255, 0.9);
				}
				:global(:not(.light-mode):not(.dark-mode)) li {
					border-bottom-color: rgba(255, 255, 255, 0.1);
				}
				:global(:not(.light-mode):not(.dark-mode)) .section-header h1 {
					color: #ffffff;
				}
				:global(:not(.light-mode):not(.dark-mode)) .section-header p {
					color: #b0b6c6;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="section-header">
					<h1>{title}</h1>
					<p>{description}</p>
				</div>
				<ul>
					{
						sortedPosts.map((post) => (
							<li>
								<a href={`/${post.id}/`} class="post-item">
									<h2 class="title">{post.data.title}</h2>
									<p class="date">
										<FormattedDate date={post.data.publishedDate} />
									</p>
									<p class="description">{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
