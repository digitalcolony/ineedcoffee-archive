---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

export interface Props {
	title: string;
	description: string;
	categorySlug: string;
	posts: any[];
}

const { title, description, posts, categorySlug } = Astro.props;

// Filter posts by category if categorySlug is provided
const sortedPosts = categorySlug
	? posts
			.filter(
				(post) =>
					post.data.categorySlug === categorySlug || post.data.categories?.includes(categorySlug)
			)
			.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf())
	: posts.sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf());
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 1em;
			}
			.section-header {
				margin-bottom: 2em;
				text-align: center;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			li {
				width: calc(50% - 1rem);
			}
			.post-item {
				display: flex;
				flex-direction: column;
				padding: 1.5rem;
				border-radius: 8px;
				box-shadow: var(--box-shadow);
				transition: box-shadow 0.2s ease;
			}
			.post-item:hover {
				box-shadow: var(--box-shadow-hover);
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.4;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			.description {
				margin-top: 0.5em;
				margin-bottom: 0;
			}

			/* Dark mode styles for titles and dates */
			:global(.dark-mode) .title {
				color: #ffffff;
			}

			:global(.dark-mode) .date {
				color: #b0b6c6;
			}

			:global(.dark-mode) .description {
				color: rgba(255, 255, 255, 0.95);
			}

			:global(.dark-mode) .section-header h1 {
				color: #ffffff;
			}

			:global(.dark-mode) .section-header p {
				color: #b0b6c6;
			}

			:global(.dark-mode) .post-item {
				background-color: #232a3b;
				transition:
					background-color 0.2s ease,
					box-shadow 0.2s ease;
			}

			:global(.dark-mode) .post-item:hover {
				background-color: #2a3247;
			}

			/* System preference dark mode */
			@media (prefers-color-scheme: dark) {
				:global(:not(.light-mode):not(.dark-mode)) .title {
					color: #ffffff;
				}

				:global(:not(.light-mode):not(.dark-mode)) .date {
					color: #b0b6c6;
				}

				:global(:not(.light-mode):not(.dark-mode)) .description {
					color: rgba(255, 255, 255, 0.95);
				}

				:global(:not(.light-mode):not(.dark-mode)) .section-header h1 {
					color: #ffffff;
				}

				:global(:not(.light-mode):not(.dark-mode)) .section-header p {
					color: #b0b6c6;
				}

				:global(:not(.light-mode):not(.dark-mode)) .post-item {
					background-color: #232a3b;
					transition:
						background-color 0.2s ease,
						box-shadow 0.2s ease;
				}

				:global(:not(.light-mode):not(.dark-mode)) .post-item:hover {
					background-color: #2a3247;
				}
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				li {
					width: 100%;
					margin-bottom: 1em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="section-header">
					<h1>{title}</h1>
					<p>{description}</p>
				</div>
				<ul>
					{
						sortedPosts.map((post) => (
							<li>
								<a href={`/${post.id}/`} class="post-item">
									<h2 class="title">{post.data.title}</h2>
									<p class="date">
										<FormattedDate date={post.data.publishedDate} />
									</p>
									<p class="description">{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
